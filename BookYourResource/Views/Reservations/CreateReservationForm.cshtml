@model ReservationRequest

<h2>Create a Reservation</h2>

<form asp-action="CreateReservationV" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ResourceId">Resource</label>
        <select asp-for="ResourceId" class="form-control" asp-items="ViewBag.Resources"></select>
        <span asp-validation-for="ResourceId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date and Time</label>
        <input asp-for="StartDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date and Time</label>
        <input asp-for="EndDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
